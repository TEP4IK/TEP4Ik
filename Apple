#include <iostream>

using namespace std;

struct Apple
    char name[25];
    double d;
    double mass;

    void print() {
        cout << name << "\n" << d << "\n" << mass << endl;
    }

};

int main() {
    Apple p;
    cout << "Enter company name:";
    cin.getline(p.name, 25);
    cout << "Enter Apple diameter:";
    cin >> p.d;
    cout << "Enter Apple mass:";
    cin >> p.mass;
    p.print();
    return 0;
}
