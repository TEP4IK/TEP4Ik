используя пространство имен СТД;

константный инт фут = 12;
константный поплавок метр = 0.0254;
константный поплавок кг = 2.2;

Тип int основной() 
{
	в разделе setlocale(значение lc_all,"российский");
	инт growthFoot, growthInch, weightPounds; // рост в футах, рофт в дюймах, вес в фунтах
 функции cout << "Введите Ваш рост в футах: _\б";
 Кин >> growthFoot;
 функции cout << "Введите Ваш рост в дюймах: __\Б\Б";
 Кин >> growthInch;
 функции cout << "Введите Ваш вес с фунтах: __\Б\Б";
 Кин >> weightPounds;
 функции cout << "Ваш индекс массы тела (ИМТ): " << тыц((growthFoot * фут + growthInch)*метр, 2) / (weightPounds / кг) << епси;
	возврат 0;
}
